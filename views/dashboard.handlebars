<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>


<div class="row mt-4">
  <div class="col-md-6">
    <h3>Post to YOUR SCENE:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">What's happening:</label>
        <input class="form-input" type="text" id="post-title" name="post-name" />
      </div>
      <div class="form-group">
        <label for="post-content">What's the word:</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
</div>

<script src="/js/dashboard.js"></script>