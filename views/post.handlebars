<div class="text-center">
    <h2>{{name}}</h2>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
    <p class="text-area">{{content}}</p>

    <!-- Comments Section -->
    <div class="comments-section">
        <h3>Comments</h3>
        {{#each comments as |comment|}}
            <div class="comment">
                <p><strong>{{user.name}}</strong> - {{format_date date_created}}</p>
                <p>{{comment.content}}</p>
            </div>
        {{/each}}
    </div>

    <!-- Comment Form -->
    <div class="form-group">
        <label for="comment-content">Comment:</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
        <button class="btn btn-primary">Submit Comment</button>
    </div>
</div>

<script src="/js/dashboard.js"></script>